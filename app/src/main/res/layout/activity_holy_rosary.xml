<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212F3D"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context=".churchPrayers">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banid"
        android:id="@+id/addholyrosarytwo"
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        >

    </com.google.android.gms.ads.AdView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarholyrosarytwo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#212F3D"
        app:title="Holy Rosary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:background="#fff"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        >


                        <ImageView
                            android:id="@+id/toReading"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/read"
                            />
                        <ImageView
                            android:id="@+id/toPrayers"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/pray"
                            />
                        <ImageView
                            android:id="@+id/toNovena"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/nov"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#D5D5D4"
                        android:layout_height="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/holyros"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Holy Rosary"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:background="#D5D5D4"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:id="@+id/divinemercy"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Divine Mercy Chaplet"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:background="#D5D5D4"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:id="@+id/perpe"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="Mother of Perpetual Help"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:background="#D5D5D4"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:id="@+id/rosarylib"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="Rosary of liberation"
                        />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:background="#D5D5D4"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:id="@+id/thankje"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Thank you Jesus Chaplet"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:background="#D5D5D4"
                    android:layout_height="2dp" />

                <LinearLayout
                    android:id="@+id/maydev"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="May devotion prayers"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#D5D5D4"
                    android:layout_height="2dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#212F3D"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prayerTwentyOne">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banid"
        android:id="@+id/addprayertwentyone"
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        >

    </com.google.android.gms.ads.AdView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarprayertwentyone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#212F3D"
        app:title="Prayer Against Bareness And Infertility"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                android:background="#fff"
                android:layout_marginBottom="2dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="30dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I declare that there shall be no barrenness in my life, in the name of Jesus. Lord, remove the evil effect of anything that is unclean or destructive that has entered into my reproductive organs in the name of Jesus. I break any curse contrary to child-bearing transferred to me by anybody or by any boyfriend, in the name of Jesus."
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I come against every hormonal problem, in the name of Jesus. Let the walls of my womb be purged by Divine fire, in the name of Jesus. Let all evil forces speaking defeat against my child birth be silenced, in the name of Jesus. I revoke every ancestral covenant of barrenness in my family and marriage in the name of Jesus. I nullify every covenant of barrenness operating in my marriage originating from my family side or from my spouse family side in the name of Jesus."
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I release upon my life and marriage all of God's blessings of fruitfulness in the name of Jesus Christ. Every evil river drowning my life and marriage in barrenness and unfruitfulness, dry up in the name of Jesus. I destroy by fire, every buried or hidden object, sustaining barrenness in my life and marriage in the name of Jesus. I am fruitful in every way; according to the Word of God in the name of Jesus. Father, bless me with good and healthy children in the name of Jesus. My womb is fertile and reproductive in the name of Jesus."
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My reproductive system is healed and restored in the name of Jesus. I refuse to agree with every decree holding me bound in the state of barrenness and unfruitfulness in the name of Jesus."
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It is written,by the stripes of Jesus Christ, I am healed, (Peter 2:24) I receive total healing and restoration upon my body and reproductive system in the name of Jesus."
                        android:textColor="#b22222"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father, in your Holy Word, no one who truly serves you, remain barren or unfruitful."
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My God, I cannot remain barren anymore in the name of Jesus. I shall conceive and give birth naturally, in due season, in the name of Jesus Christ. (3x)"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please everlasting Father, hear and answer me and grant me my heart desire, through Jesus Christ our Lord. Amen."
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="3dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalLanguages">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banid"
        android:id="@+id/addlocallanguage"
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        >

    </com.google.android.gms.ads.AdView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarlocallanguage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#212F3D"
        app:title="Local Language"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:background="#fff"
            android:layout_marginBottom="10dp"
            >


           <ImageView
               android:layout_width="28dp"
               android:layout_height="28dp"
               android:src="@drawable/gloria"
               android:id="@+id/glo"/>


            <ImageView
                android:layout_marginLeft="9dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/creed"
                android:id="@+id/cre"/>


            <ImageView
                android:layout_marginLeft="9dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/prayers_after_communion"
                android:id="@+id/pr"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/Dateboldl"
            android:text="Datebold"
            />

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/bodydatel"
            android:text="bodydate"
            android:layout_marginLeft="3dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/firstreadingl"
            android:text="firstreading"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"/>
        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/pasageredl"
            android:text="passagered"
            android:textColor="#fff00000"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/bodyfirstreadingl"
            android:text="bodyfirstreading"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"/>



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/redresponsialpsalml"
            android:text="red responsial psalm"
            android:textColor="#fff00000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/boldresponsel"
            android:text="boldresponse"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/bodyresponsialpsalml"
            android:text="bodyresponsialpsalm"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"/>




        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/SecondReadingboldl"
            android:text="secondreadingbold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/redsecondreadingl"
            android:text="redthemesecondreading"
            android:textColor="#fff00000"
            android:layout_marginLeft="3dp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/bodysecondreadingl"
            android:text="bodysecondreading"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/Alleulial"
            android:text="alleluia"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/bodyAlleluial"
            android:text="bodyAlleluia"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/Gospelreadingl"
            android:text="Gospelreading"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/redGospelreadingl"
            android:text="redGOspelreading"
            android:textColor="#fff00000"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/bodyGospelreadingl"
            android:text="bodyGospelreading"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="3dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/anythingl"
            android:textColor="#000"
            android:text="Anything"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:id="@+id/bodyanythingl"
            android:text="BodyAnything"
            android:layout_marginLeft="3dp"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>